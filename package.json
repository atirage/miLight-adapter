{
  "name": "miLight-adapter",
  "display_name": "miLight",
  "version": "0.0.5",
  "description": "miLight adapter add-on for Mozilla IoT Gateway",
  "author": "atirage",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "miLight"
  ],
  "homepage": "https://github.com/atirage/miLight-adapter#readme",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "manifest.json",
    "miLight-adapter.js"
  ],
  "dependencies": {
    "color": "^3.1.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0"
  },
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "bulbs": [
        {
          "bridgeIP": "192.168.0.66",
          "bridgePort": 8899,
          "zone": 0
        }
      ]
    },
    "schema": {
      "type": "object",
      "properties": {
        "bulbs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "bridgeIP"
            ],
            "properties": {
              "bridgeIP": {
                "type": "string"
              },
              "bridgePort": {
                "type": "integer",
                "minimum": 1
              },
              "zone": {
                "type": "integer",
                "minimum": 0
              }
            }
          }
        }
      }
    }
  }
}
