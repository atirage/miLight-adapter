{
 "name":"miLight-adapter",
 "display_name":"miLight",
 "version":"0.0.4",
 "description":"miLight adapter add-on for Mozilla IoT Gateway",
 "author":"atirage",
 "main":"index.js",
 "keywords":[
    "mozilla",
    "iot",
    "adapter",
    "miLight"
 ],
 "homepage":"",
 "license":"MPL-2.0",
 "repository":{
   "type":"git",
   "url":""
 },
 "bugs":{
   "url":""
 },
 "files":[
   "LICENSE",
   "SHA256SUMS",
   "index.js",
   "miLight-adapter.js"
 ],
 "dependencies":{
 },
 "devDependencies":{
   "eslint":"^5.12.0"
 },
 "moziot":{
    "api":{
      "min":2,
      "max":2
    },
    "plugin":true,
    "exec":"{nodeLoader} {path}",
    "config":{
      "bulbs":[
        {
          "bridgeIP":"192.168.0.66",
          "bridgePort":8899,
          "zone":0
        }
      ]
    },
    "schema":{
      "type":"object",
      "properties":{
        "bulbs":{
          "type":"array",
          "items":{
        "type":"object",
        "required":[
          "bridgeIP"
        ],
        "properties":{
          "bridgeIP":{
            "type":"string"
          },
          "bridgePort":{
           "type":"integer",
           "minimum":1
          },
          "zone":{
            "type":"integer",
            "minimum":0
          }
        }
     }
    }
   }
  }
 }
}
